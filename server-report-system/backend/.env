# Environment Configuration
NODE_ENV=development
PORT=3001

# Cloudflare Tunnel Configuration
# Replace 'your-domain.example.com' with your actual Cloudflare tunnel domain
DOMAIN=your-domain.example.com
FRONTEND_DOMAIN=your-domain.example.com
BACKEND_DOMAIN=api.your-domain.example.com

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ahrp_reports
DB_USER=root
DB_PASSWORD=password

# Discord OAuth2 Configuration
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
# Updated redirect URI for Cloudflare Tunnel domain
DISCORD_REDIRECT_URI=https://api.your-domain.example.com/api/auth/discord/callback

# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_REPORTS_CHANNEL_ID=your_reports_channel_id
DISCORD_STAFF_CHANNEL_ID=your_staff_channel_id
DISCORD_ALERTS_CHANNEL_ID=your_alerts_channel_id
DISCORD_LOGS_CHANNEL_ID=your_logs_channel_id

# Session Configuration
SESSION_SECRET=your_super_secret_session_key_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Discord Webhook URLs
WEBHOOK_PLAYER_REPORTS=https://discord.com/api/webhooks/your_player_reports_webhook
WEBHOOK_BUG_REPORTS=https://discord.com/api/webhooks/your_bug_reports_webhook
WEBHOOK_FEEDBACK=https://discord.com/api/webhooks/your_feedback_webhook
WEBHOOK_URGENT=https://discord.com/api/webhooks/your_urgent_webhook

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,text/plain,application/pdf

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# FiveM Server Configuration
FIVEM_API_KEY=ahrp_fivem_test_key_12345
FIVEM_SERVER_KEY=ahrp_fivem_test_key_12345
FIVEM_SERVER_URL=http://localhost:30120

# Frontend URL (Updated for Cloudflare Tunnel)
FRONTEND_URL=https://your-domain.example.com

# CORS Origins (for both local dev and production)
CORS_ORIGINS=http://localhost:3000,https://your-domain.example.com,https://api.your-domain.example.com

# Cloudflare Tunnel Settings
# Set to true when using Cloudflare Tunnel
USE_CLOUDFLARE_TUNNEL=true
TUNNEL_SUBDOMAIN=api